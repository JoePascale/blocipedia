<h1><%= markdown(@wiki.title) %></h1>

<div class="row">
  <div class="col-md-8">
    <h3><%= markdown(@wiki.body) %></h3>
    <hr>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
  </div>
  <hr>
  <div class="col-md-8">
    <h4> Wiki Collaborators: </h4>
    <p><%= @wiki.collaborators %></p>
    <p>{add checkbox to remove each collaborator here}</p>
    <hr>
  </div>
  <%# if current_user.id == @wiki.user.id %>
    <div class="col-md-8">
      <h4> Add a Collaborator: </h4>
      <%= form_for(user_session_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
        <%= submit_tag "Submit", :name => nil %>
      <% end %>
      <hr>
    </div>
  <%# end %>
</div>
